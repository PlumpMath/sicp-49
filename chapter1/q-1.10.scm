(define (A x y)
	(cond ((= y 0) 0)
		  ((= x 0) (* 2 y))
		  ((= y 1) 2)
		  (else (A (- x 1)
				(A x (- y 1))))))

; (1)
(print (A 1 10))
; (A 1 10) = 2 * (A 1 9) = 2 * 2 * (A 1 8) ... = 2^10 = 1024

; (2)
(print (A 2 4))
; (A 2 4) = (A 1 (A 1 3)) = 2^(A 1 3) = 2^(2^4) = 65536

; (3)
(print (A 3 3))
; (A 3 3) = (A 2 (A 2 2)) = (A 1 (A 1 (A 1 1))) = 2^(2^(2^2)) = 65536

